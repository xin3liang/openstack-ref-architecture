[Unit]
Description=OpenStack Image Service (code-named Glance) Registry server
After=syslog.target network.target

[Service]
Type=simple
User=glance
ExecStart=/srv/glance/bin/glance-registry --config-file /etc/glance/glance-registry.conf --log-file /var/log/glance/registry.log
PrivateTmp=true
Restart=on-failure

[Install]
WantedBy=multi-user.target

