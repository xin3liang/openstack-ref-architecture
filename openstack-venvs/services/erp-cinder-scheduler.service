[Unit]
Description=OpenStack Cinder Scheduler Server
After=syslog.target network.target

[Service]
Type=simple
User=cinder
ExecStart=/srv/cinder/bin/cinder-scheduler --config-file /etc/cinder/cinder.conf --log-file /var/log/cinder/scheduler.log
Restart=on-failure

[Install]
WantedBy=multi-user.target

